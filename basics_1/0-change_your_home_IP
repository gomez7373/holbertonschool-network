#!/usr/bin/env bash
# This script configures the /etc/hosts file to resolve localhost and facebook.com to specific IPs

# Backup the original /etc/hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Modify the /etc/hosts file
sudo sed -i '/127.0.0.1/s/127.0.0.1/127.0.0.2/' /etc/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts
